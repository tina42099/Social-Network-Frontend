@require "helpers"

text-color = #000
mobile-width = 600px

body
	margin 0
	padding 0
	font-family sans-serif

#navbar
	position relative // as opposed to relative, fixed, etc
	margin-bottom 40px
	top 0
	left 0
	width calc(100% - 40px)
	padding 20px
	background blue

#navbar span
	color white
	font-size 1em
	text-transform uppercase
	font-family 'Futura', sans-serif // goes until it finds a font on the computer

#nb-items
	float right
#nb-items *
	padding-left 20px


// FORM
.form-box
	width 50%
	margin 0px 25%
	//box-shadow 0px 0px 20px #CCC
	padding 30px
.fb-item
	width 100%
	margin-bottom 20px
	font-size 1.2em
.fb-item:focus //huh
	border-color blue
	
#submit
	bottom 0
	left 0
	width 100%
	background green
	padding 20px
	text-align center
	color white
	font-size 1.4em
	//text-transform uppercase
	-webkit-transition-duration 0.2s // Safari
	transition-duration 0.2s
	
#submit:hover
	opacity 0.6
	background-color green
	//font-size 1.2em
	//text-transform uppercase
	cursor pointer

