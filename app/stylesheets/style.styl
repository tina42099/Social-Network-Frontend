@require "helpers"

text-color = #000
mobile-width = 600px

body
	margin 0
	padding 0
	font-family sans-serif

#navbar
	position relative // as opposed to relative, fixed, etc
	margin-bottom 40px
	top 0
	left 0
	width calc(100% - 40px)
	padding 20px
	background linear-gradient(to right, rgba(201, 247, 246, 1), rgba(63, 222, 156, 1))

#navbar span
	color black
	font-size 1em
	text-transform uppercase
	font-family 'Futura', sans-serif // goes until it finds a font on the computer

#nb-items
	float right
#nb-items *
	padding-left 20px


// FORM
.form-box
	width 50%
	margin 0px 25%
	//box-shadow 0px 0px 20px #CCC
	padding 30px
.fb-item
	width 100%
	margin-bottom 20px
	font-size 1.2em
.fb-item:focus //huh
	border-color blue
	
#submit
	bottom 0
	left 0
	width 100%
	background rgba(25, 219, 151, 1)
	padding 20px
	text-align center
	color white
	font-size 1.4em
	//text-transform uppercase
	-webkit-transition-duration 0.2s // Safari
	transition-duration 0.2s
	
#submit:hover
	opacity 0.6
	//font-size 1.2em
	//text-transform uppercase
	cursor pointer

img.center
	display block
	margin auto

#card
	box-shadow: 0 4px 8px 0 rgba(24, 169, 167, 1)
	background linear-gradient(to right, rgba(63, 222, 156, 1), rgba(201, 247, 246, 1))
	max-width: 500px;
	margin: auto;
	text-align: center;

#map
	margin-top -40px
	width 100%
	height 850px
